<h1>Listing articles</h1>

<table class="adminTable">
  <tr>
    <th>Ignite City</th>
    <th>Name</th>
    <th>Date</th>
    <th>Html Text Preview</th>
    <th>Is news</th>
    <th>Is sticky</th>
    <th>Comments allowed</th>
  </tr>

<% for article in @articles %>
  <tr>
    <td><%=h article.ignite.city %></td>
    <td><%=h article.name %></td>
    <td><%= pp_date article.created_at %></td>
    <td><%=h article.html_text[0,100] %></td>
    <td><%=h article.is_news %></td>
    <td><%=h article.is_sticky %></td>
    <td><%=h article.comments_allowed %></td>
    <td><%= link_to 'Show', [:admin, article] %></td>
    <td><%= link_to 'Edit', edit_admin_article_path(article) %></td>
    <td><%= link_to 'Destroy', [:admin, article], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

