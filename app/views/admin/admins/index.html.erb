<h1><%= h @ignite.city %> Admins</h1>

<table class="adminTable">
  <tr>
    <th>Name</th>
    <th>Login</th>
    <th>Email</th>
  </tr>

<% @admins.each do |admin| -%>
  <tr>
    <td><%=h admin.name %></td>
    <td><%=h admin.login %></td>
    <td><%=h admin.email %></td>
    <td>
      <% if can?(:edit, admin) -%>
        <%= link_to 'Edit', edit_admin_admin_path(admin) %>
      <% end -%>
    </td>
    <td>
      <% if can?(:destroy, admin) -%>
        <%= link_to 'Remove', admin_admin_path(admin), :confirm => 'Are you sure?', :method => :delete %>
      <% end -%>
    </td>
  </tr>
<% end -%>
</table>

<br />

<%= link_to 'New Admin', new_admin_admin_path %>
